<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AVLoadingIndicatorView"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        app:indicatorColor="#ffffff" />

    <LinearLayout
        android:id="@+id/all_ll"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_5_select"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_popupwindow_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/email_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text=""
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/email_content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:hint="@string/please_enter_the_content"
                android:textColor="#FF323232"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="8dp"
                android:textColor="#99000000"
                android:text="@string/email_rules"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email_cancel_tv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    android:text="@string/cancel"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="#FF31B70E" />

                <TextView
                    android:id="@+id/email_confirm_tv"
                    android:layout_toRightOf="@+id/email_cancel_tv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    android:text="@string/confirm"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="#FF31B70E" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
